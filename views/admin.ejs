<%- include("./partials/header.ejs") %>

<div class="page1">
    <div class="menu">
        <div class="menu-items highlight">
            <img src="/images/table-view.svg" alt="">
            <span>Dashboard</span>
        </div>
        <div class="menu-items highlight">
            <img src="/images/user-line.svg" alt="">
            <span>Account</span>
        </div>
    </div>
    <div class="details">
        <div class="dashboard container">
            <div class="user d-flex">
                <div class="user-profile">
                    <img src="/images/neon-wallpaper-1.jpg" alt="">
                </div>
                <div class="user-rest">
                    <div class="info">
                        <h3>Anshuman Khanna</h3>
                        <h5 class="enum">03515002821</h5>
                    </div>
                </div>
            </div>
            <div class="table">
                <table>
                    <tr class="heading">
                        <th>S.no.</th>
                        <th>Name</th>
                        <th>Enrollment Number</th>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Date</th>
                        <th>Status</th>
                        <th>Mobile</th>
                        <th>Email</th>
                    </tr>

                    <% if (complaints.length > 0) { %>
                        <% complaints.forEach((complaintElem, index) => { %>
                            <% let { user, subject, complaint, date, status } = complaintElem; %>
                            <% let { fullname, enrollmentNumber, mobile, email } = user; %>
                            <% date = new Date(date); %>
                            <% date = date.toLocaleDateString("en-gb"); %>

                            <tr class="rows">
                                <td>
                                    <%= index + 1 %>.
                                </td>
                                <td>
                                    <%= fullname %>
                                </td>
                                <td>
                                    <%= enrollmentNumber %>
                                </td>
                                <td>
                                    <%= subject %>
                                </td>
                                <td>
                                    <%= complaint %>
                                </td>
                                <td>
                                    <%= date %>
                                </td>
                                <td>
                                    <%= status %>
                                </td>
                                <td>
                                    <%= mobile %>
                                </td>
                                <td>
                                    <%= email %>
                                </td>
                            </tr>
                        <% }); %>
                    <% } %>
                </table>
            </div>
        </div>
        <div class="account"></div>
    </div>
</div>

<%- include("./partials/footer.ejs") %>